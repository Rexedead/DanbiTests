<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:id="@+id/spinner"/>
    <Button
            android:text="go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/spinner"
            android:layout_alignParentStart="true" android:id="@+id/go"
            android:onClick="cryptMyString"/>

</RelativeLayout>